<div class="ui small menu">
  <div class="ui container">
    <a class="active item">
      Chatroom
    </a>
    <%= link_to 'Messages', root_path, class: "item" %>
    <div class="right menu">
      <div class="ui dropdown item">
        <%= logged_in? ? current_user.username : "Acocunt"%>  <i class="dropdown icon"></i>
        <div class="menu">
          <% if logged_in? %>
            <%= link_to 'Log out', logout_path, class: "item", method: :delete %>
          <% else %>
            <%= link_to 'Log in', login_path, class: "item" %>
            <a class="item">Sign up</a>
          <% end %>
        </div>
      </div>
      <% if !logged_in? %>
        <div class="item">
            <%= link_to 'Sign Up', login_path, class: "ui primary button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
